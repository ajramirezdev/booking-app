<h1>Edit Time Slot</h1>
<%= form_with(model: @time_slot, local: true) do |form| %>
  <% if @time_slot.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(@time_slot.errors.count, "error") %> prohibited this time slot from being saved:</h2>
      <ul>
        <% @time_slot.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>
  <div class="field">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, { ampm: true }, step: 1.hour %>
  </div>
  <div class="field">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, { ampm: true }, step: 1.hour %>
  </div>
  <div class="field">
    <%= form.label :max_tables %>
    <%= form.number_field :max_tables %>
  </div>
  <div class="actions">
    <%= form.submit 'Update Time Slot' %>
  </div>
<% end %>
<%= link_to 'Back to Time Slots', static_pages_home_path %>
