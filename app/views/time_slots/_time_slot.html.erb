<div class="flex justify-between items-center px-8 py-4 border-b">
  <div class="flex gap-4">
    <p><strong>Start Time:</strong> <%= time_slot.start_time.strftime("%H:%M") %></p>
    <p><strong>End Time:</strong> <%= time_slot.end_time.strftime("%H:%M") %></p>
    <p><strong>Max Tables:</strong> <%= time_slot.max_tables %></p>
  </div>
  <div class="flex gap-4">
    <%= link_to 'Edit', edit_time_slot_path(time_slot), class: "text-sm bg-amber-900 text-white font-bold px-2 py-1 rounded" %>
    <%= link_to "Delete", time_slot_path(time_slot), method: :delete,
data: { turbo_method: :delete, turbo_confirm: "You sure?" }, class: "text-sm bg-rose-900 text-white font-bold px-2 py-1 rounded" %>
  </div>
</div>