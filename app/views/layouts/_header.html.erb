<header class="flex justify-between items-center px-12 py-4 bg-emerald-950 text-white sticky top-0 z-50">
  <%= link_to "Booking App", root_path, id: "logo", :class => "uppercase tracking-[-1px] text-white font-bold text-2xl" %>
  <nav>
    <ul class="flex gap-8">
      <% if logged_in? %>
        <ul class="flex gap-4">
          <% if current_user.admin? %>
            <li><%= link_to "Reservations", reservations_path %></li>
            <li><%= link_to "Timeslots", time_slots_path %></li>
            <li><%= link_to "Tables", tables_path %></li>
            <li><%= link_to "Availabilities", availabilities_path %></li>
          <% end %>
          <% if !current_user.admin? %>
            <li><%= link_to 'My Reservations', my_reservations_path %></li>
          <% end %>
          <li><%= link_to "Log Out", logout_path, method: :delete %></li>
        </ul>
      <% else %>
        <%= link_to "Log In", login_path %>
      <% end %>
    </ul>
  </nav>
</header>