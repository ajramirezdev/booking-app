<% provide(:title, "Edit Table") %>
<div class="flex justify-center items-center" style="height: calc(100vh - 64px);">
  <div>
    <h1 class="text-4xl font-bold mb-4">Edit Table</h1>
    <%= form_with(model: @table, local: true, html: { class: "flex flex-col gap-2 min-w-96" }) do |form| %>
      <%= render 'shared/error_messages', object: form.object %>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class: "rounded w-full" %>
      </div>
      <div class="field">
        <%= form.label :max_capacity %>
        <%= form.number_field :max_capacity , min: 0, class: "rounded w-full" %>
      </div>
      <div class="actions">
        <%= form.submit 'Update Table', class: "bg-emerald-900 rounded py-2.5 text-white font-bold w-full" %>
      </div>
    <% end %>
    <div class="mt-4">
      <%= link_to 'Back to Tables', tables_path, class: "bg-gray-900 rounded py-2.5 text-white font-bold w-full block text-center" %>
    </div>
  </div>
</div>
