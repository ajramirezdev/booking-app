<div class="flex justify-between items-center px-8 py-4 border-b">
  <div class="flex gap-4">
    <p><strong>Table Name:</strong> <%= availability.table.name %></p>
    <p><strong>Table Capacity:</strong> <%= availability.table.max_capacity %></p>
    <p><strong>Time Slot:</strong> <%= "#{availability.time_slot.start_time.strftime('%I:%M %p')} - #{availability.time_slot.end_time.strftime('%I:%M %p')}" %></p>
    <p><strong>Date:</strong> <%= availability.date.strftime('%B %d, %Y') %></p>
    <p><strong>Available:</strong> <%= availability.available ? "Yes" : "No" %></p>
  </div>
  <div class="flex gap-4">
    <%= link_to "Delete", availability_path(availability), method: :delete,
data: { turbo_method: :delete, turbo_confirm: "You sure?" }, class: "text-sm bg-rose-900 text-white font-bold px-2 py-1 rounded" %>
  </div>
</div>