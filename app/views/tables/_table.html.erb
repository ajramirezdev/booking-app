<div class="flex justify-between items-center px-8 py-4 border-b">
  <div class="flex gap-4">
    <p><strong>Table Name:</strong> <%= table.name %></p>
    <p><strong>Max Capacity:</strong> <%= table.max_capacity %></p>
  </div>
  <div class="flex gap-4">
    <%= link_to 'Edit', edit_table_path(table), class: "text-sm bg-amber-900 text-white font-bold px-2 py-1 rounded" %>
    <%= link_to "Delete", table_path(table), method: :delete,
data: { turbo_method: :delete, turbo_confirm: "You sure?" }, class: "text-sm bg-rose-900 text-white font-bold px-2 py-1 rounded" %>
  </div>
</div>