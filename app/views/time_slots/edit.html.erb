<% provide(:title, "Edit Time Slot") %>
<div class="flex justify-center items-center" style="height: calc(100vh - 64px);">
  <div>
    <h1 class="text-4xl font-bold mb-4">Edit Time Slot</h1>
    <%= form_with(model: @time_slot, local: true, html: { class: "flex flex-col gap-2 min-w-96" }) do |form| %>
      <%= render 'shared/error_messages', object: form.object %>
      <%= form.label :start_time %>
      <div>
        <%= form.time_select :start_time, { ampm: true }, step: 1.hour %>
      </div>
      <%= form.label :end_time %>
      <div>
        <%= form.time_select :end_time, { ampm: true }, step: 1.hour %>
      </div>
      <%= form.label :max_tables %>
      <%= form.number_field :max_tables %>
      <div class="actions">
        <%= form.submit 'Update Time Slot', class: "bg-emerald-900 rounded py-2.5 text-white font-bold w-full" %>
      </div>
    <% end %>
    <div class="mt-4">
      <%= link_to 'Back to Time Slots', time_slots_path, class: "bg-gray-900 rounded py-2.5 text-white font-bold w-full block text-center" %>
    </div>
  </div>
</div>