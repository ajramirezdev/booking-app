<% provide(:title, "Add Timeslot") %>
<div class="flex justify-center items-center" style="height: calc(100vh - 64px);">
  <div>
    <h1 class="text-4xl font-bold mb-4">Create a TimeSlot</h1>
    <%= form_with(model: @time_slot, local: true, html: { class: "flex flex-col gap-2 min-w-96" }) do |form| %>
      <%= render 'shared/error_messages', object: form.object %>
      <div class="flex gap-4">
        <div class="w-1/2">
          <%= form.label :start_time %>
          <%= form.select :start_time, 
         (11..23).to_a.map { |h| ["#{h}:00", "#{h}:00"] }, 
         { include_blank: false }, class: "rounded w-full"
    %>
        </div>
        <div class="w-1/2">
          <%= form.label :end_time %>
          <%= form.select :end_time, 
         (11..23).to_a.map { |h| ["#{h}:00", "#{h}:00"] }, 
         { include_blank: false }, class: "rounded w-full"
    %>
        </div>
      </div>
      <%= form.label :max_tables %>
      <%= form.number_field :max_tables, min: 0, class: "rounded w-full" %>
      <%= form.submit "Create TimeSlot", class: "bg-emerald-900 rounded py-2.5 text-white font-bold" %>
    <% end %>
  </div>
</div>
